<h1>Client Details - <%= @client.name() %></h1>
<div id="main" class="well">
<a href="/">Home</a><br>
<a href="/stylists">View All Lists</a><br>
<hr>
<!-- Update Form -->
<form action="/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <p>Rename your Client</p>
  <input id="name" name="name" type="text" class="form-control" placeholder="New Client Name">
  <br>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
<!-- Delete list -->
  <form action="/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Client</button>
</form>
</div>
